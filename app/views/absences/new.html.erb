<div class="container">
  <div class="row mt-5">
    <div class="col-md-6 offset-md-3">
      <div class="p-4 shadow-rounded">
        <h2 class="text-center">New absence</h2>

        <%= form_with(model: @absence, local: true) do |form| %>
          <% if @absence.errors.any? %>
            <div class="alert alert-danger">
              <h4><%= pluralize(@absence.errors.count, "error") %> prohibited this absence from being saved:</h4>
              <ul>
                <% @absence.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group">
            <%= form.label :start_time %>
            <%= form.datetime_field :start_time, required: true, label: false, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :end_time %>
            <%= form.datetime_field :end_time, required: true, label: false, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :reason %>
            <%= form.text_field :reason, label: false, class: 'form-control' %>
          </div>

          <div class="actions mt-3 d-grid gap-2 d-md-flex justify-content-md-center">
            <%= form.submit "Create Absence", class: 'btn btn-primary' %>
            <%= link_to 'Cancel', meetings_path, class: 'btn btn-outline-primary' %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>









