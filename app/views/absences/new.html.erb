<div class="container">
  <h2>Create an absence</h2>
  <%= simple_form_for(@absence) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :start_date_time, required: true %>
      <%= f.input :end_date_time, required: true %>
      <%= f.input :reason %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Submit" %>
    </div>
  <% end %>
</div>
