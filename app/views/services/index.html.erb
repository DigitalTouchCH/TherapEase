<div class="wrapper-home-container">
  <div class="container">

    <%# SECTION 1: TITLE %>
    <div class="row">
      <div class="intro mb-5">
            <h1 class="text-center">Services</h2>
            <p class="text-center">Explore our comprehensive range of wellness services, including physiotherapy, massage therapy, and osteopathy, provided by a team of highly professional and certified practitioners.</p>
      </div>
    </div>

    <%# SECTION 2: LIST THERAPISTS %>
    <div class="row">
      <% @services.each do |service| %>
        <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
          <div class="card text-dark card-has-bg click-col" style="background-image:url(<%= cl_image_path(service.photo.key) %>);">
            <img class="card-img d-none" src="<%= cl_image_path(service.photo.key) %>" alt="Physiotherapist at work">
            <div class="card-img-overlay d-flex flex-column">
              <div class="card-body">
                <small class="card-meta mb-2">Service</small>
                <h4 class="card-title mt-0 "><a class="text-dark" herf="WIP: LINK TO PACKAGE"><%= service.name %></a></h4>            </div>
              <div class="card-footer">
                <div class="media">
                  <div class="media-body">
                    <h6 class="my-0 text-dark d-block text-center"><%= format_price_per_unit(service.price_per_unit) %> EUR</h6>
                    <h6 class="my-0 text-dark d-block text-center"><%= service.duration_per_unit %> minutes</h6>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
