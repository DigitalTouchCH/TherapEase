<div class="container">
  <div class="row mt-5">
    <div class="col-md-6 offset-md-3">
      <div class="p-4 shadow-rounded">
        <h2 class="text-center">Edit a video</h2>
          <%= simple_form_for(@medium) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :title, required: true %>
              <%= f.input :description, required: true %>
              <%= f.input :url, required: true %>
              <div>
                <p>Assign to meetings</p>
                <%= f.select :meetings, Meeting.where(package: Package.where(therapist: Therapist.where(user: current_user)))
                .where.not(start_time: nil).order(:start_time)
                .collect {|x| [x.start_time.try(:strftime, "%d %B from %H:%M")+ x.end_time.try(:strftime, " to %H:%M"), x.id]},
                {}, multiple: true %>
               </div>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Submit", class:"btn btn-primary" %>
            </div>
          <% end %>

      </div>
    </div>
  </div>
</div>
