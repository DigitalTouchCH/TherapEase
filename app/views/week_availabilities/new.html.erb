<div class="container">
  <div class="row mt-5">
    <div class="col-md-6 offset-md-3">
      <div class="p-4 shadow-rounded">
        <h2 class="text-center">New Week Availability</h2>

        <%= form_for(@week_availability) do |f| %>
          <% if @week_availability.errors.any? %>
            <div class="alert alert-danger">
              <h4><%= pluralize(@week_availability.errors.count, "error") %> prohibited this week availability from being saved:</h4>
              <ul>
                <% @week_availability.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>

          <div class="form-group">
            <%= f.label :valid_from %>
            <%= f.date_field :valid_from, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :valid_until %>
            <%= f.date_field :valid_until, class: 'form-control' %>
          </div>

          <div class="actions mt-3">
            <%= f.submit 'Create Week Availability', class: 'btn btn-primary' %>
            <%= link_to 'Cancel', week_availabilities_path, class: 'btn btn-outline-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
